{% extends 'layout_user.html.twig' %}
{% block title %} Account register | MUXU{% endblock %}

{% block content %}
<div class="container mt-5">
	<div class="jumbotron my-5 bg-login text-black menu-account-bg">
		{% if session.flash_message is not empty %}
		{% for message in session.flash_message %}
		<div class="col-12">
			<div class="alert alert-danger alert-dismissible fade show" role="alert">
				<strong>{{message}}</strong>
				<button type="button" class="close" data-dismiss="alert" aria-label="Close" id="clear_flash">
					<span aria-hidden="true">&times;</span>
				</button>
			</div>
		</div>
		{% endfor %}
		{% endif %}
		<h1 class="">Register</h1>
		<hr class="mb-3 hr-color">
		<form method="POST">
			<div class="form-group form-style">
				<label for="email"></label>
				<input type="email" class="form-control" id="email" name="email" placeholder="Email" required>
			</div>
			<div class="form-group form-style">
				<label for="firstname"></label>
				<input type="text" class="form-control" id="firstname" name="firstname" placeholder="Firstname" required>
            </div>
            <div class="form-group form-style">
				<label for="lastname"></label>
				<input type="text" class="form-control" id="lastname" name="lastname" placeholder="Lastname" required>
            </div>
            <div class="form-group form-style">
				<label for="address"></label>
				<input type="text" class="form-control" id="address" name="address" placeholder="Address" required>
            </div>          
			<div class="form-group form-style">
				<label for="password"></label>
				<input type="password" class="form-control" id="password" name="password" placeholder="Password" required>
			</div>
			<div class="form-group form-style">
				<label for="password2"></label>
				<input type="password" class="form-control" id="password2" name="password2" placeholder="Check password" required>
			</div>
			<div class="form-group form-style">
				<div class="form-check form-check-inline">
					<input class="form-check-input" type="checkbox" id="newsletter" value="true"
						name="newsletter"> 
					<label class="form-check-label" for="newsletter">Receive Muxu Newsletter</label>
				</div>
			</div>  
				<button type="submit" class="mt-3 btn button-color" name="register">Submit</button>
		</form>
	</div>
</div>
{% endblock %}