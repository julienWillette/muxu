{% extends 'layout.html.twig' %}
{% block title %}Show size | Admin Muxu{% endblock %}
{% block content %}
<div class="card m-auto">
    <div class="card-body">
        <h1>Size</h1>
        <h5 class="card-title">{{ size.title }}</h5>
        <p>{{ size.format }}</p>
    </div>
    <div class="card-footer text-center">
        <a href="/size/index" class="btn btn-sm my-2 back-color"><i class="fas fa-list"></i> Back to the list</a>
        <a href="/size/edit/{{ size.id }}" class="btn btn-sm my-2 edit-color"><i class="fas fa-edit logo-edit"></i></a>
    </div>
</div>
{% endblock %}