{% extends 'layout.html.twig' %}
{% block title %}Show section | Admin Muxu{% endblock %}
{% block content %}
<div class="card m-auto">
    <div class="card-body">
        <h1>Home section</h1>
        <h5 class="card-title">{{ header.title }}</h5>
        <p>Description: {{ header.description }}</p>
        <p class="card-text"><img src="{{header.url}}" alt="" class="img-fluid" width="350px"></p>
    </div>
    <div class="card-footer text-center">
        <a href="/header/index" class="btn btn-sm my-2 back-color"><i class="fas fa-list"></i> Back to the list</a>
        <a href="/header/edit/{{ header.id }}" class="btn btn-sm my-2 edit-color"><i class="fas fa-edit logo-edit"></i></a>
    </div>
</div>
{% endblock %}