{% extends 'layout.html.twig' %}
{% block title %}List Artists | Admin Muxu{% endblock %}
{% block content %}
<h1 class="display-4">Artists</h1>
<div class="text-right my-3">
    <a href="/artist/add" class="btn btn-sm plus-color">Add an artist <i class="fas fa-plus-circle"></i></a>
</div>
<table class="table table-responsive{-sm|-md|-lg|-xl} table-bg">
    <thead>
        <tr>
            <th scope="col">Firstname</th>
            <th scope="col">Lastname</th>
            <th scope="col">Action</th>
        </tr>
    </thead>
    <tbody>
        {% for artist in artists %}
        <tr>
            <td>{{ artist.firstname }}</td>
            <td>{{ artist.lastname }}</td>
            <td>
                <a href="/artist/show/{{ artist.id }}" class="btn btn-sm my-2 eye-color"><i
                        class="fas fa-eye logo-eye"></i></a>
                <a href="/artist/edit/{{ artist.id }}" class="btn btn-sm my-2 edit-color"><i
                        class="fas fa-edit logo-edit"></i></a>
            </td>
        </tr>
        {% endfor %}
    </tbody>
</table>

{% endblock %}