{% extends 'layout.html.twig' %}
{% block title %}{{ artist.firstname }} Artist | Admin Muxu{% endblock %}
{% block content %}
<div class="card m-auto">
    <div class="card-body">
        <h1>Artist</h1>
        <h5 class="card-title">{{ artist.firstname }} - {{artist.lastname}}</h5>
        <p class="card-text">Description : {{artist.description}}</p>
        {% for image in images %}
        <p class="card-text"><img src="{{image.url}}" alt="" class="img-fluid" width="350px"></p>
        {% endfor %}
    </div>
    <div class="card-footer text-center">
        <a href="/artist/index" class="btn btn-sm my-2 back-color"><i class="fas fa-list"></i> Back to the list</a>
        <a href="/artist/edit/{{ artist.id }}" class="btn btn-sm my-2 edit-color"><i class="fas fa-edit logo-edit"></i></a>
    </div>
</div>
{% endblock %}