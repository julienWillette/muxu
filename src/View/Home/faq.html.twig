{% extends 'layout_user.html.twig' %}
{% block title %}FAQ | MUXU{% endblock %}
{% block content %}
<div class="container mt-5 mb-5 pb-5">
<h1 class="Faq_title">Frequently asked questions</h1>
{% for faq in faqs %}
<div class="accordion" id="accordionExample">
    <div class="card space_faq mb-3">
        <div class="card-header color_header" id="heading{{faq.id}}">
            <h2 class="mb-0">
                <button class="btn btn-link btn-block text-left collapsed color_question" type="button" data-toggle="collapse" data-target="#collapse{{faq.id}}" aria-expanded="false" aria-controls="collapse{{faq.id}}">
                    . {{faq.question}}  
                </button>
            </h2>
        </div>
        <div id="collapse{{faq.id}}" class="collapse color_answer" aria-labelledby="heading{{faq.id}}" data-parent="#accordionExample">
            <div class="card-body color_answer">
            {{faq.answer}}
            </div>
        </div>
    </div>
</div>
{% endfor %}
</div>
{% endblock %}