{% extends 'layout_user.html.twig' %}
{% block title %} Product suggestion Just for you | MUXU{% endblock %}

{% block content %}

<div class='container m-2'>
    <div class="row mt-5 p-3 big-container">
        {% for i in 0..product|length -1 %}
        <div class="col-xl-3 col-lg-3 col-md-12 col-xs-12 small-container">
            <div class="text-center mt-2 bg-color-random">
                <h2 class="product-name-random">{{product[i].name}}</h2>
            </div>
            <div>
                <h3 class="artist-one-article">By
                    {{product[i].artist_firstname}}
                    {{product[i].artist_lastname}}</h3>
                    <p>{{product[i].category_name}}</p>
                {% if product[i].quantity > 0 %}
                <p>{{product[i].price}}â‚¬</p>
                {% else %}
                <span class="">Sold-out!</span><br><br>
                {% endif %}
                <a href="/home/show/{{ product[i].id }}" class="discover-color pt-5">More details ></a>
            </div>
        </div>
        <div class="col-xl-8 col-lg-8 col-md-12 col-xs-12 small-container">
            <a href="/home/show/{{ product[i].id }}"><img src="{{product[i].images[0].url}}"
                    class="d-block w-100 img-fluid img-responsive" alt="{{product[i].name}}"></a>
        </div>
        {% endfor %}
    </div>
</div>
{% endblock %}