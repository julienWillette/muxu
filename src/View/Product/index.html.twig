{% extends 'layout.html.twig' %}
{% block title %}List products | Admin Muxu{% endblock %}
{% block content %}
<h2 class="display-4">Products</h2>
<div class="text-right my-3">
    <a href="/product/add" class="btn btn-sm plus-color">Add a new product <i class="fas fa-plus-circle"></i></a>
</div>
<table class="table table-responsive{-sm|-md|-lg|-xl} table-bg">
    <thead>
        <tr>
            <th scope="col">Name</th>
            <th scope="col">Artist</th>
            <th scope="col">Image</th>
            <th scope="col">Size</th>
            <th scope="col">Quantity</th>
            <th scope="col">Price</th>
            <th scope="col">Category</th>
            <th scope="col">Activated </th>
            <th scope="col">Action</th>
        </tr>
    </thead>
    <tbody>
        {% for product in products %}
        <tr>
            <td>{{ product.name }}</td>
            <td>{{ product.artist_firstname }} {{ product.artist_lastname }}</td>
            <td><img src="{{product.images[0].url}}" alt="" class="img-fluid size-img-table"></td>
            <td>{{ product.size }}</td>
            <td>{{ product.quantity }}</td>
            <td>{{ product.price }}â‚¬</td>
            <td>{{ product.category_name }}</td>
            <td>{{ product.is_activated ? 'Yes' : 'No' }}</td>
            <td>
                <a href="/product/show/{{ product.id }}" class="btn btn-sm my-2 eye-color"><i
                        class="fas fa-eye logo-eye"></i></a>
                <a href="/product/edit/{{ product.id }}" class="btn btn-sm my-2 edit-color"><i
                        class="fas fa-edit logo-edit"></i></a>
            </td>
        </tr>
        {% endfor %}
    </tbody>
</table>
{% endblock %}
