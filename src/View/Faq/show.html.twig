{% extends 'layout.html.twig' %}
{% block title %}Show FAQ | Admin Muxu{% endblock %}
{% block content %}
<div class="card m-auto">
    <div class="card-body">
        <h1>Question/Answer</h1>
        <p class="card-title">Question: {{ faq.question }}</p>
        <p class="card-text">Answer: {{ faq.answer }}</p>
    </div>
    <div class="card-footer text-center">
        <a href="/faq/index" class="btn btn-sm my-2 back-color"><i class="fas fa-list"></i> Back to the list</a>
        <a href="/faq/edit/{{ faq.id }}" class="btn btn-sm my-2 edit-color"><i class="fas fa-edit logo-edit"></i></a>
        <a href="/faq/delete/{{ faq.id }}" class="btn btn-sm btn-danger my-2 trash-margin"><i class="fas fa-trash"></i></a>
    </div>
</div>
{% endblock %}
